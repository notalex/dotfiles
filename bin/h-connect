#! /usr/bin/env bash

CURRENT_DISPLAY=$(xrandr | head -2 | tail -1 | sed 's/ connected.\+$//')

if [[ $1 == 'r' ]]; then
  rotate='--rotate right'
elif [[ $1 == '0' ]]; then
  rotate='--off'
else
  rotate='--rotate normal'
fi

mode='--auto'
[[ $1 == 'u' ]] && mode='--mode 3440x1440'

cmd="xrandr --output HDMI-1 $mode --right-of $CURRENT_DISPLAY $rotate"
echo $cmd
eval $cmd
