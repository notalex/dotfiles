#! /usr/bin/env bash

length=$(cat ~/bin/pass-length)

lesspass $1 $2 -C ${3-1} -L $length -c --no-fingerprint &> /dev/null
passwd1=$(OS_paste)

lesspass $1 $2 -C ${3-1} -L $length -c --no-fingerprint &> /dev/null
passwd2=$(OS_paste)

if [[ "$passwd1" = "$passwd2" ]]; then
  echo 'All good!'
else
  echo 'mismatch!'
fi

trap "echo '' | OS_copy" EXIT TERM
sleep 60
